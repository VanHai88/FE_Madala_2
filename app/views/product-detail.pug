extends layout/layout

block vars
    -title = 'detail'
    -bodyClass = 'product-detail-page'

block container
    section.section-product-detail
        .container
            .path
                each path_data in detailLink
                    a.path__name(href=path_data.link)= path_data.name
                a.path__name(href="#lactay") Lắc tay
            .section-product-detail__wrapper
                .row
                    .col-sm-12.col-md-12.col-lg-7
                        .section-product-detail__left
                            .section-product-detail__img
                                .slide-top#slide-top-js.arrow
                                .section-product-detail__slider#slider-js
                                    img.section-product-detail__thumbnail.thumbnail__active.thumbnail-js(src="./images/product_15.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_12.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_13.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_14.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_12.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_13.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_14.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_14.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_14.png" alt="product")
                                    img.section-product-detail__thumbnail.thumbnail-js(src="./images/product_14.png" alt="product")

                                .slide-bottom#slide-bottom-js.arrow
                            .section-product-detail__featured
                                img#featured(src="./images/product_15.png" alt="product")

                    .col-sm-12.col-md-12.col-lg-5     
                        .section-product-detail__right
                            h2.product__name Lắc tay TYFFANY xu hướng mới nhất 
                            h3.product__category TYFFANY ms 3201
                            p.product__price 950.000đ
                                span.product__price-first 999.000đ
                            p.product__desc Không thể phủ nhận, thời trang và phong cách chính là “tuyên ngôn” không lời mạnh mẽ nhất của mỗi người phụ nữ. Do đó, việc mua sắm thời trang trở thành niềm vui, và có khi là nguồn cảm hứng vô tận để phái đẹp sống vui, sống đẹp hơn trong mắt nửa còn lại của thế giới. Để F5 tủ đồ của mình trước những xu hướng ngày một đa dạng hơn trong thế giới thời trang, nhiều chị em không ngần ngại chi tiêu “mạnh tay” để sở hữu những món đồ yêu thích.
                            form.product__form(action="#")
                                .form__ground
                                    label.form__lable màu sắc
                                    select.form__input
                                        option(value="0") Chọn Màu
                                        option(value="1") Màu Đồng
                                        option(value="2") Màu Bạc
                                        option(value="3") Màu Vàng
                                .form__ground
                                    label.form__lable size
                                    select.form__input
                                        option(value="0") Chọn size
                                        option(value="1") 12
                                        option(value="2") 13
                                        option(value="3") 14
                                .form__ground
                                    label.form__lable số lượng
                                    input.form__input(type="text" value=0)
                                .form__buttons
                                    button.btn.btn--green.btn--border Mua hàng
                                    button.btn.btn--green.btn--border 
                                        i.fas.fa-heart
                                    button.btn.btn--green.btn--border
                                        i.fas.fa-sync-alt
                            .social-network
                                p.social-network__title Shipping &amp; 
                                    span Retuens
                                ul.social-network__list
                                    li.social-network__item
                                        button.btn.btn--blue.btn__facebook-js 
                                            i.fab.fa-facebook-square.item__icon 
                                            span.item__name Like
                                        .count.count--facebook-js  0
                                            .arrow-left  
                                    li.social-network__item
                                        button.btn.btn--border.btn__tweet-js 
                                            i.fab.fa-twitter.item__icon.item__icon--tweet  
                                            span.item__name Tweet
                                        .count.count--tweet-js 0
                                            .arrow-left
                                    li.social-network__item
                                        button.btn.btn--border.btn__google.btn__google-js 
                                            span.icon__google g
                                            span +1
                                        .count.count--google-js 0
                                            .arrow-left
                                button.btn.btn__in
                                    i.fab.fa-linkedin-in.item__icon.item__icon--in   
                                    span.item__name Share
                                button.btn.btn--border.btn__pinterest
                                    i.fab.fa-pinterest-p
                                    span.icon__pinterest in it
    section.section-detail-additional
        .container
            .section-detail-additional__wrapper
                .row
                    .col-sm-12.col-lg-9
                        .section-detail-additional__left 
                            .overview
                                ul.overview__list
